                        "description": "Get only email notifications"
                    }
                },
                {
                    "name": "Get UI Alert Notifications",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/repositories/{{repo_name}}/notifications?type=ui_alert",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "repositories",
                                "{{repo_name}}",
                                "notifications"
                            ],
                            "query": [
                                {
                                    "key": "type",
                                    "value": "ui_alert"
                                }
                            ]
                        },
                        "description": "Get only UI alert notifications"
                    }
                },
                {
                    "name": "Get New File Notifications",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/repositories/{{repo_name}}/notifications?change_type=new",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "repositories",
                                "{{repo_name}}",
                                "notifications"
                            ],
                            "query": [
                                {
                                    "key": "change_type",
                                    "value": "new"
                                }
                            ]
                        },
                        "description": "Get notifications for new files only"
                    }
                },
                {
                    "name": "Mark Notification as Sent",
                    "request": {
                        "method": "PATCH",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/repositories/notifications/{{notification_id}}/mark-sent",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "repositories",
                                "notifications",
                                "{{notification_id}}",
                                "mark-sent"
                            ]
                        },
                        "description": "Mark a specific notification as sent"
                    }
                }
            ]
        },
        {
            "name": "Sync Logs",
            "item": [
                {
