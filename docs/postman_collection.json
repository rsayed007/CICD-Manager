                        "description": "Get notifications that haven't been sent yet"
                    }
                },
                {
                    "name": "Get Email Notifications",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/repositories/{{repo_name}}/notifications?type=email",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "repositories",
                                "{{repo_name}}",
                                "notifications"
                            ],
                            "query": [
                                {
                                    "key": "type",
                                    "value": "email"
                                }
                            ]
